{
  "manifest_version": 2,
  "name": "Stop Dragging",
  "version": "1.0",
  "content_security_policy": "script-src 'self' https://chrome-extension.glitch.me; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "persistent": false
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  }
}